FROM ubuntu:18.04

ARG DEBIAN_FRONTEND=noninteractive

ENV SDR=rtl
ENV TZ=Etc/UTC
ENV SDR_INDEX=0
ENV SAMPLERATE=2000000
ENV CENTER_FREQ=1625500000
ENV BIAS=0
ENV BANDWIDTH=0
ENV GAIN=0
ENV IF_GAIN=0

VOLUME ["/opt/output"]

RUN apt update && \
    apt upgrade -y && \
    apt install -y software-properties-common \
        build-essential \
        cmake \
        usbutils

#installing cmake takes an extraordinarily long time

RUN add-apt-repository ppa:gnuradio/gnuradio-releases-3.7
RUN apt install -y git \
        gnuradio \
        gr-osmosdr \
        swig \
        doxygen \
        liborc-0.4-dev

WORKDIR /usr/src
RUN git clone https://github.com/muccc/gr-iridium
WORKDIR /usr/src/gr-iridium
RUN git checkout maint-3.7 &&\
    mkdir ./build
WORKDIR /usr/src/gr-iridium/build
RUN cmake ../ &&\
    make -j$(nproc) &&\
    make install &&\
    ldconfig

ADD ./entrypoint.sh /usr/share/

ENTRYPOINT /usr/share/entrypoint.sh
